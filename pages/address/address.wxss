.newAddress{
  position: fixed;
  width: 710rpx;
  height: 10vh;
  display: flex;
  bottom: 0;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 30px;
  margin-bottom: 20rpx;
  border: 1rpx solid red;
  justify-content: center;
  align-items: center;
}
.newAddress image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.newAddress view{
  display: flex;
  justify-content: center;
  align-items: center;
}
.myaddress{
  width: 100%;
}
.addressblock1{
  width: 100%;
  height: 20vh;
  display: flex;
  align-items: center;
}
.name{
  flex: 1;
  width: 150rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.centerpart{
  flex: 3;
  display: flex;
  width: 450rpx;
  align-items: center;
  flex-direction: column;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.changeaddress{
  flex: 1;
  width: 150rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  align-items: center;
  justify-content: center;
  display: flex;
}
.changeaddress image{
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin: auto auto;
}