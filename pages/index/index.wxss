/* pages/index/index.wxss */

.wrapper {
  background-color: #eeeeee;
}

.nav-bar {
  width: 100%;
  position: fixed;
  top: 0;
  background-color: red;
  padding: 0 25rpx;
  box-sizing: border-box;
  z-index: 1;
  transition: height 1s ease-in-out;
}

.status {
  width: 100%;
  height: 20px;
}

.icon {
  width: 90px;
  height: 30px;
  margin: 10rpx 0;
}

.icon image {
  width: 100%;
  height: 100%;
}

.search {
  position: absolute;
  bottom: 15rpx;
  left: 20rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 50rpx;
  transition: width 1s ease-in-out;
}

.search-icon {
  top: 50%;
  transform: translateY(-50%);
  position: absolute;
  width: 35rpx;
  height: 35rpx;
  margin-left: 20rpx;
  float: left;
}

.search-icon image {
  width: 100%;
  height: 100%;
}

.search-input {
  position: absolute;
  left: 50rpx;
  height: 60rpx;
  width: 600rpx;
  display: flex;
  align-items: center;
  margin-left: 15rpx;
}


.main {
  padding: 0 20rpx;
}

.messages {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 14rpx 0;
}

.message {
  display: flex;
  font-size: 20rpx;
  width: 33.3%;
  align-items: center;
}

.message-icon {
  width: 35rpx;
  height: 35rpx;
}

.message-icon image {
  width: 100%;
  height: 100%;
}

.message-text {
  letter-spacing: 3rpx;
  margin-left: 10rpx;
  color: red;
}

.content {
  height: 340rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.scroll {
  height: 300rpx;
  margin-bottom: 20rpx;
  /* background-color: red; */
}

.menu {
  width: 1420rpx;
  display: flex;
  padding: 10rpx 0;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.menu-item {
  width: 142rpx;
  height: 150rpx;
  text-align: center;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.menu-item-img {
  width: 80rpx;
  margin: 0 auto;
}

.menu-item-img image {
  width: 100%;
}

.menu-item-title text {
  font-size: 22rpx;
}

.bottomLine {
  width: 90rpx;
  height: 4rpx;
  background-color: #d9d9d9;
  margin: 0 auto;
  border-radius: 20rpx;
  position: relative;
}

.line {
  width: 35rpx;
  height: 4rpx;
  border-radius: 20rpx;
  background-color: #e4181f;
  position: absolute;
}



.banner {
  width: 100%;
  margin-top: 20rpx;
  padding: 0 -20rpx;
}
.banner image {
  width: 100%;
}

.specials {
  display: flex;
  justify-content:space-between ;
}

.special {
  width: 49.5%;
}

.special image {
  width: 100%;
}

.sort {
  height: 120rpx;
  width: 100%;
  display: flex;
  white-space: nowrap;
  box-sizing: border-box;
}

.sort-item {
  height: 120rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  position: relative;
}



.sort-item::after {
  content: '';
  position: absolute;
  height: 40rpx;
  width: 1px;
  background-color: #000;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.sort-item:last-child::after{
  display: none;
}

.sort-item-title {
  padding: 0;
}



.sort-item-title text {
  font-weight: bold;
  font-size: 28rpx;
}

.selectTitle {
  color: red;
}
.selectText {
  background-color: red;
  border-radius: 20rpx;
  line-height: 38rpx;
  width: 110rpx;
  height: 38rpx;
  text-align: center;
  color: #fff;
  

}

.sort-item-text {
  /* background-color: red; */
  /* border-radius: 20rpx; */
  line-height: 38rpx;
  width: 110rpx;
  height: 38rpx;
  text-align: center;
 
}

.sort-item-text text {
  font-size: 20rpx;
  /* color: #7f7f7f; */
  /* color: #fff; */

}

.details {
  white-space: nowrap;
}

.detail {
  width: 750rpx;
  padding: 10rpx;
  box-sizing: border-box;
  display: inline-block;
}

.detail_wrapper {
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.detail-item {
  width: 47%;
  margin: 10rpx;
  background-color: #fff;
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
  float: left;
}

.detail-item image {
  width: 100%;
}

.icon-img {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  width: 60rpx !important;
}

.desc {
  padding: 15rpx 20rpx;
}

.desc view {
  padding: 5rpx 0;
}

.desc-title {
  font-size: 26rpx;
}
.desc-eval {
  font-size: 22rpx;
}
.desc-price {
  color: red;
}



