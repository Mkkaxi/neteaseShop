/* pages/index/index.wxss */

.wrapper {
  background-color: #eeeeee;
}

.nav-bar {
  width: 100%;
  position: fixed;
  top: 0;
  background-color: red;
  padding: 0 25rpx;
  box-sizing: border-box;
  z-index: 1;
}

.status {
  width: 100%;
  height: 20px;
}

.icon {
  width: 90px;
  height: 30px;
  margin: 10rpx 0;
}

.icon image {
  width: 100%;
  height: 100%;
}

.search {
  position: absolute;
  bottom: 5rpx;
  left: 20rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 50rpx;
}

.search-icon {
  width: 35rpx;
  height: 35rpx;
  margin-left: 20rpx;
}

.search-icon image {
  width: 100%;
  height: 100%;
}

.search-input {
  height: 60rpx;
  width: 650rpx;
  display: flex;
  align-items: center;
  margin-left: 15rpx;
}

.search-input input {
  background-color: #eee; 
}

.main {
  padding: 0 20rpx;
}

.messages {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 14rpx 0;
}

.message {
  display: flex;
  font-size: 20rpx;
  width: 33.3%;
  align-items: center;
}

.message-icon {
  width: 35rpx;
  height: 35rpx;
}

.message-icon image {
  width: 100%;
  height: 100%;
}

.message-text {
  letter-spacing: 3rpx;
  margin-left: 10rpx;
  color: red;
}

.content {
  height: 300rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.scroll {
  height: 260rpx;
  /* background-color: red; */
}

.banner {
  width: 100%;
  margin-top: 20rpx;
  padding: 0 -20rpx;
}
.banner image {
  width: 100%;
}

.specials {
  display: flex;
  justify-content:space-between ;
}

.special {
  width: 49.5%;
}

.special image {
  width: 100%;
}

.sort {
  height: 120rpx;
  width: 100%;
  display: flex;
  white-space: nowrap;
  box-sizing: border-box;
}

.sort-item {
  height: 120rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  position: relative;
}



.sort-item::after {
  content: '';
  position: absolute;
  height: 40rpx;
  width: 1px;
  background-color: #000;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.sort-item:last-child::after{
  display: none;
}

.sort-item-title {
  padding: 0;
}

.sort-item-title text {
  font-weight: bold;
  font-size: 28rpx;
}

.sort-item-text text {
  font-size: 20rpx;
  color: #7f7f7f;
}

.details {
  white-space: nowrap;
}

.detail {
  width: 750rpx;
  padding: 10rpx;
  box-sizing: border-box;
  display: inline-block;
}

.detail_wrapper {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
  float: left;
}

.detail-item {
  width: 100%;
  background-color: #fff;
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
}

.detail-item image {
  width: 100%;
}

.icon-img {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  width: 60rpx !important;
}

.desc {
  padding: 15rpx 20rpx;
}



